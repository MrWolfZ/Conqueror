<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsExperimental>true</IsExperimental>
    </PropertyGroup>

    <Import Project="../.targets/lib.targets" />

    <PropertyGroup>
        <IsAotCompatible>true</IsAotCompatible>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>

        <!--
          this disables the analyzer warning for using the same event name for multiple log messages when
          using the source generator; we don't want that warning because we have many logging methods for
          the same phase of an execution that should have the same event name; note that we use this in
          addition to the SuppressMessage attribute due to a bug in Rider that causes the error to still
          be shown even when it is being suppressed
        -->
        <NoWarn>SYSLIB1025</NoWarn>
    </PropertyGroup>

    <!-- for NuGet -->
    <PropertyGroup>
        <Description>Part of the Conqueror library set. Logging middlewares for command-query-separation (CQS).</Description>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Conqueror.Abstractions\Conqueror.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="$(DependencyInjectionAbstractionsVersion)" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.3" />
    </ItemGroup>

</Project>
