<Project Sdk="Microsoft.NET.Sdk.Web">

    <Import Project="../../.targets/common.targets" />

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.9.0" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="8.0.4" />
        <PackageReference Include="NUnit" Version="4.1.0" />
        <PackageReference Include="NUnit3TestAdapter" Version="4.5.0" />
        <PackageReference Include="coverlet.collector" Version="3.1.2" />
        <PackageReference Include="Conqueror" Version="$(ConquerorVersion)" Condition="$(ShouldReferencePackage)" />
        <PackageReference Include="Conqueror.Transport.Http.Client" Version="$(ConquerorVersion)" Condition="$(ShouldReferencePackage)" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../../../src/Conqueror/Conqueror.csproj" Condition="$(ShouldReferenceProject)" />
        <ProjectReference Include="../../../src/transports/http/Conqueror.Transport.Http.Client/Conqueror.Transport.Http.Client.csproj" Condition="$(ShouldReferenceProject)" />
        <ProjectReference Include="../Examples.BlazorWebAssembly.API/Examples.BlazorWebAssembly.API.csproj" />
    </ItemGroup>

</Project>
