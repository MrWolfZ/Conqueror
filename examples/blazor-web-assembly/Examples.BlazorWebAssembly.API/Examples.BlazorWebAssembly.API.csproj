<Project Sdk="Microsoft.NET.Sdk.Web">

    <Import Project="../../.targets/common.targets" />

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Conqueror.Transport.Http.Server.AspNetCore" Version="$(ConquerorVersion)" Condition="$(ShouldReferencePackage)" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../../../src/Conqueror.Transport.Http.Server.AspNetCore/Conqueror.Transport.Http.Server.AspNetCore.csproj" Condition="$(ShouldReferenceProject)" />
        <ProjectReference Include="../Examples.BlazorWebAssembly.Contracts/Examples.BlazorWebAssembly.Contracts.csproj" />
        <ProjectReference Include="../Examples.BlazorWebAssembly.SharedMiddlewares/Examples.BlazorWebAssembly.SharedMiddlewares.csproj" />

        <!-- only required when using project references; when using a package reference the source generator is included in the abstractions package -->
        <ProjectReference Include="../../../src/Conqueror.SourceGenerators/Conqueror.SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" Condition="$(ShouldReferenceProject) == true" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="SharedCounters\" />
    </ItemGroup>

</Project>
